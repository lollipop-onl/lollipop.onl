---
type Props = {
  slug: string;
  title: string;
  description?: string;
};
const { slug, title, description } = Astro.props;
---

<a class="block rounded-md p-5 border border-divider bg-tertiary hover:bg-secondary" href={`/tools/${encodeURIComponent(slug)}`}>
  <div class="grid gap-2">
    <h2 class="text-lg">{title}</h2>
    {description && (
      <p class="text-description text-xs">{description}</p>
    )}
  </div>
</a>
