---
import Header from '@components/Header.astro';
import Menu from '@components/Menu.astro'
import '@fontsource/ibm-plex-sans-jp/400.css';
import '@fontsource/ibm-plex-sans-jp/500.css';
import '@fontsource/ibm-plex-sans-jp/700.css';

type Props = {
  title?: string;
};
const { title } = Astro.props;

const SITE_NAME = 'よなよなこーど';
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=devise-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {title ? `${title} | ${SITE_NAME}` : `${SITE_NAME} - しもちぃの個人ブログ`}
    </title>
    <link rel="icon" href="/favicon.ico">
    <script type="text/partytown" src="https://www.googletagmanager.com/gtag/js?id=G-K8S4SGNN6L"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      gtag('config', 'G-K8S4SGNN6L');
    </script>
  </head>
  <body class="font-sans text-sumi-900 dark:text-white bg-white dark:bg-sumi-900">
    <Header />
    <div class="px-4">
      <div class="max-w-5xl mx-auto">
        <div class="flex gap-8">
          <div class="flex-shrink-0">
            <Menu />
          </div>
          <main id="main" class="w-full">
            <slot />
          </main>
        </div>
      </div>
    </div>
    <script>
      import { applyTheme, toggleTheme } from '@utils/darkMode';

      window.toggleTheme = toggleTheme;
      applyTheme();

      requestAnimationFrame(() => {
        document.body.classList.add('transition');
        document.body.classList.add('duration-75');
      });
    </script>
  </body>
</html>
