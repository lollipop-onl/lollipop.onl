---
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Menu from '@components/Menu.astro'
import WebFont from '@components/WebFont.astro';
import { SITE_NAME } from '@constants';

type Props = {
  title?: string;
  openGraph?: {
    type?: 'website' | 'blog' | 'article' | 'product';
    image?: string;
  }
};
const { title, openGraph } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=devise-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {title ? `${title} - ${SITE_NAME}` : `${SITE_NAME} - しもちぃの個人ブログ`}
    </title>
    <meta property="og:title" content={title || SITE_NAME}>
    <meta property="og:type" content={openGraph?.type || 'website'}>
    <meta property="og:image" content={openGraph?.image || 'https://simochee.net/ogp.png'}>
    <meta property="og:site_name" content={SITE_NAME}>
    <meta property="twitter:site" content='@lollipop_onl'>
    <link rel="apple-touch-icon" type="image/png" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" type="image/png" href="/favicon.png">
    <script type="text/partytown" src="https://www.googletagmanager.com/gtag/js?id=G-K8S4SGNN6L"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      gtag('config', 'G-K8S4SGNN6L');
    </script>
  </head>
  <body class="font-sans bg-primary text-md text-body h-full">
    <div class="h-full flex flex-col gap-6">
      <Header />
      <div class="px-4">
        <div class="max-w-5xl mx-auto">
          <div class="flex gap-8 flex-col-reverse md:flex-row">
            <div class="flex-shrink-0 md:w-64">
              <Menu />
            </div>
            <main id="main" class="w-full">
              <slot />
            </main>
          </div>
        </div>
      </div>
      <div class="mt-auto pt-24">
        <Footer />
      </div>
    </div>
    <WebFont />
  </body>
</html>
