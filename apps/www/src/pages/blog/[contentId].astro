---
import marked from 'marked';
import Layout from "@layouts/Layout.astro";
import type { GetStaticPaths } from "astro";
import { getBlogEntities } from 'microcms-client';

export const getStaticPaths = (async () => {
  const { contents } = await getBlogEntities();
  
  return contents.map((content) => ({
    params: {
      contentId: content.id
    },
    props: {
      content,
    }
  }))
}) satisfies GetStaticPaths;

type Props = Awaited<ReturnType<typeof getStaticPaths>>[number]['props'];
const { content } = Astro.props;

const html = marked.parse(content.body ?? '');
---

<Layout>
  <div class="rounded-lg bg-sumi-50 dark:bg-sumi-800 overflow-hidden">
    <div class="bg-sea-800 dark:bg-sea-50 text-white dark:text-sumi-800 px-5 pt-8 pb-8">
      <h1 class="text-2xl font-medium md:font-regular md:text-3xl leading-sm">{content.title}</h1>
      <p class="text-sumi-900 dark:text-white text-opacity-50 text-sm">{content.lead}</p>
    </div>
    <div class="prose dark:prose-invert" set:html={html} />
  </div>
</Layout>
